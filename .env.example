# Runtime mode (local | aws)
APP_ENV=local

# Core AWS settings (shared)
TABLE_NAME=wealth-main
AWS_REGION=us-east-1

# Local development profile (DynamoDB Local / LocalStack)
DYNAMODB_ENDPOINT=http://localhost:8000
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local
# Optional local S3 endpoint for report/raw payload workflows
# S3_ENDPOINT=http://localhost:4566
# S3_BUCKET=wealthhub-data-local
# REPORTS_LOCAL_DIR=.data/reports

# Production profile notes:
# 1) Set APP_ENV=aws
# 2) Remove DYNAMODB_ENDPOINT and S3_ENDPOINT
# 3) Use IAM role credentials (do not set static keys in .env)
# 4) Set TABLE_NAME and S3_BUCKET to production resources

# Backend
PORT=3001

# Market data service (optional)
# MARKET_DATA_MIN_DELAY_MS=300
# MARKET_DATA_MAX_CONCURRENT=2
# MARKET_DATA_YAHOO_TIMEOUT_MS=30000
# MARKET_DATA_YFINANCE_TIMEOUT_MS=30000 # legacy alias
# MARKET_DATA_TESOURO_TIMEOUT_MS=25000
# MARKET_DATA_GOOGLE_TIMEOUT_MS=15000
# MARKET_DATA_STATUSINVEST_TIMEOUT_MS=15000
# MARKET_DATA_FUNDAMENTUS_TIMEOUT_MS=15000
# PRICE_HISTORY_MIN_DELAY_MS=250
# PRICE_HISTORY_MAX_CONCURRENT=2
# PLATFORM_BCB_TIMEOUT_MS=20000
# PLATFORM_NEWS_TIMEOUT_MS=15000
#
# Tesouro CSV URLs (official public endpoints configured by environment)
# TESOURO_CSV_URL_ALL=
# TESOURO_CSV_URL_NTNB=
# TESOURO_CSV_URL_NTNF=
# TESOURO_CSV_URL_LTN=
# TESOURO_CSV_URL_LFT=
